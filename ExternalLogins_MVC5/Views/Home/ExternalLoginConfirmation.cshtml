@model ExternalLoginConfirmationViewModel
@using ExternalLogins_MVC5.Controllers
@{
    ViewBag.Title = "ExternalLoginConfirmation";
    HomeController hm = new HomeController();
    ViewBag.Country = hm.GetCountries();
}

<h2>ExternalLoginConfirmation</h2>

@using (Html.BeginForm("ExternalLoginConfirmation", "Home", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <p style="text-align:center;" class="text-info">
        You've successfully authenticated with <i><strong>@ViewBag.LoginProvider</strong></i>.<br />
        Please fill out the form below and click the Register button to finish
        logging in.
    </p>

    <div class="form-group">
        @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Name, new { @Value = Model.Name, @readonly = "readonly", @style = "text-transform: capitalize" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FormattedName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FormattedName, new { @Value = Model.FormattedName, @readonly = "readonly", @style = "text-transform: capitalize" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.FirstName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.FirstName, new { @Value = Model.FirstName, @readonly = "readonly", @style = "text-transform: capitalize" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(m => m.LastName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.LastName, new { @Value = Model.LastName, @readonly = "readonly", @style = "text-transform: capitalize" })
        </div>
    </div>


        <div class="form-group">
            @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Email, new { @Value = @Model.Email, @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.BirthDate, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.BirthDate, new { @Value = @Model.BirthDate, @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Link, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Link, new { @Value = @Model.Link, @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Locale, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Locale, new { @Value = @Model.Locale, @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Gender, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Gender, new { @Value = @Model.Gender, @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.Headline, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.Headline, new { @Value = @Model.Headline, @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.PublicProfileUrl, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                @Html.TextBoxFor(m => m.PublicProfileUrl, new { @Value = @Model.PublicProfileUrl, @readonly = "readonly" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(m => m.ImageUrl, new { @class = "col-md-2 control-label" })
            <div class="col-md-10">
                <img src="@Model.ImageUrl"/>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
}